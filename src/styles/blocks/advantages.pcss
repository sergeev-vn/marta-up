.advantages {
  background-color: $light-bg;
  padding: 64px 0 56px ;
  background-image: svg-load(advantages-bg.svg);
  background-repeat: no-repeat;
  background-position: 100% 65%;

  @include desktopHd {
    background-image: none;
  }
}

.advantages__item {
  margin-bottom: 76px;

  :last-child {
    margin-bottom: 0;
  }
}

.advantage__image {
  width: 50%;

  @include tablets {
    width: 100%;
    max-width: 375px;
  }
}

.advantage__img {
  width: 100%;
}