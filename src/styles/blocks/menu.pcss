.menu__list {
  display: flex;
}

.menu__item {
  margin-right: 50px;

  &:last-child {
    margin-right: 0;
  }
}

.menu__link {
  font-weight: 600;
  text-transform: uppercase;
  color: $secondary;
  opacity: 0.5;
  transition: $speed;

  &:hover {
    opacity: 1;
    text-decoration: underline;
  }
}