button.btn {
  color: $btn;
  font-weight: 600;
  padding: 8px 44px;
  text-align: center;
  text-transform: uppercase;
  background-color: $secondary;
  border-radius: 20px;
  white-space: nowrap;
}

.btn-text {
  color: $secondary;
  font-weight: 600;
  padding: 8px;
  text-align: center;
  text-transform: uppercase;

  &:hover {
    text-decoration: underline;
  }

  &_margin {
    margin-right: 40px;
  }
}
