.sidebar {
  padding: 200px 20px 50px;
  width: 100%;
  height: 100%;
  display: flex;

  .menu__list {
    display: block;
  }
  .menu__item {
    margin-right: 0;
    margin-bottom: 20px;

    &:last-child {
      margin-bottom: 0;
    }
  }
  .menu__link {
    color: $main;
    display: block;
    padding: 20px 30px;
    font-size: 18px;
    opacity: 0.9;
  }
}